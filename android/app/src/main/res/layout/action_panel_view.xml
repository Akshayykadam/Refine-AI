<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/action_panel_background"
    android:paddingHorizontal="20dp"
    android:paddingTop="12dp"
    android:paddingBottom="24dp"
    android:elevation="16dp"
    android:layout_marginHorizontal="8dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:background="@drawable/bg_drag_handle"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">
        
        <!-- Logo Icon -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_logo_circle"
            android:layout_marginEnd="12dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_logo_sparkle"
                app:tint="@color/icon_tint"/>
        </FrameLayout>
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Refine AI"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/model_status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Powered by Gemma 3"
                android:textSize="11sp"
                android:textColor="@color/colorAccent"
                android:layout_marginTop="1dp"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_close"
            app:tint="@color/text_secondary"
            android:background="@drawable/bg_close_button"
            android:scaleType="centerInside"
            android:padding="6dp"
            android:contentDescription="Close"/>
    </LinearLayout>

    <!-- Preview Card with label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Text"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:textStyle="bold"
        android:layout_marginBottom="6dp"
        android:letterSpacing="0.05"/>

    <EditText
        android:id="@+id/preview_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selected text..."
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.4"
        android:maxLines="5"
        android:textColor="@color/text_primary"
        android:background="@drawable/bg_preview_card"
        android:padding="14dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="sans-serif"
        android:inputType="none"
        android:textIsSelectable="true"
        android:focusable="true"/>

    <!-- Hidden instruction input -->
    <EditText
        android:id="@+id/input_instruction"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Custom instructions..."
        android:textColorHint="@color/text_secondary"
        android:textSize="13sp"
        android:background="@drawable/bg_input_field"
        android:paddingStart="14dp"
        android:visibility="gone"
        android:paddingEnd="14dp"
        android:textColor="@color/text_primary"
        android:inputType="text"/>

    <TextView
        android:id="@+id/tv_char_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 / 500"
        android:textColor="@color/text_secondary"
        android:textSize="10sp"
        android:layout_gravity="end"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="12dp"/>

    <!-- Style Chips Label -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Style"
        android:textSize="12sp"
        android:textColor="@color/text_secondary"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:letterSpacing="0.05"/>

    <!-- Chips Row -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="16dp"
        android:requiresFadingEdge="horizontal">
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chip_refine"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Refine"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_grammar"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Grammar"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_professional"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Professional"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_casual"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Casual"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_concise"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Concise"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_warm"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Warm"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_love"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Love"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_emojify"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Emojify"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>

            <Button
                android:id="@+id/chip_hinglish"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Hinglish"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:background="@drawable/selector_chip_background"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:stateListAnimator="@null"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- Main Action Button -->
    <Button
        android:id="@+id/btn_rewrite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Rewrite"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textStyle="bold"
        android:background="@drawable/bg_btn_primary"
        android:textColor="@color/btn_text"
        android:stateListAnimator="@null"/>

    <ProgressBar
        android:id="@+id/loading_indicator"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/colorAccent"
        android:visibility="gone"
        android:layout_marginTop="16dp"/>
    
    <!-- Result Actions -->
    <LinearLayout
        android:id="@+id/result_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="12dp">

        <Button
            android:id="@+id/btn_replace"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Insert"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_btn_primary"
            android:textColor="@color/btn_text"
            android:stateListAnimator="@null"/>
            
        <Button
            android:id="@+id/btn_compare"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Original"
            android:textAllCaps="false"
            android:layout_marginStart="8dp"
            android:textSize="13sp"
            android:textColor="@color/text_secondary"
            android:background="@drawable/bg_chip"
            android:stateListAnimator="@null"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

</LinearLayout>
